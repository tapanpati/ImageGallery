<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
<div>
<%= f.label :email %><br />
<%= f.text_field :email %>
</div>
<div>
<%= f.label :password %><br />
<%= f.password_field :password %>
</div>
<div class="actions">
<%= f.submit "Sign in" %>
</div>
<% end %>
<div>New user? <%= link_to "Sign up now!", sign_up_path %></div>
